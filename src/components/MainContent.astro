---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
  description: string;
}

const { imagePath, altText, description } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);

if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
}
---

<section class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
  <div class="relative">
    <Image
      src={images[imagePath]()}
      alt={altText}
      class="w-full h-64 object-cover"
      loading="lazy"
    />

    <div
      class="absolute top-0 left-0 bg-red-600 text-white p-2 text-sm font-bold rounded-br-lg"
    >
      Exclusive
    </div>
  </div>
  <div class="p-6">
    <p class="text-lg text-gray-700">{description}</p>
    <button
      class="mt-4 w-full bg-red-600 text-white font-semibold py-2 rounded-lg hover:bg-red-700 transition-colors"
    >
      Book Now
    </button>
  </div>
</section>
